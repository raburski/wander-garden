{
    "manifest_version": 3,
    "name": "Wander Garden",
    "version": "0.0.8",
    "description": "Companion extension for wander.garden website.",
    "icons": {
      "16": "icon/16.png",
      "32": "icon/32.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
    },
    "content_scripts":[
      {
        "matches":[
            "*://*.booking.com/*"
        ],
        "run_at": "document_start",
        "js":[
          "js/consts.js",
          "js/utils.js",
          "js/ui.js",
          "js/core.js",
          "js/country.js",
          "js/capture/booking/pages/archived.js",
          "js/capture/booking/pages/confirmation.js",
          "js/capture/booking/pages/login.js",
          "js/capture/booking/pages/trips.js",
          "js/capture/booking/index.js"
        ]
      },
      {
        "matches":[
            "*://*.airbnb.com/*",
            "*://*.airbnb.co.uk/*",
            "*://*.airbnb.com.sg/*",
            "*://*.airbnb.pl/*",
            "*://*.airbnb.hu/*"
        ],
        "js":["js/consts.js", "js/ui.js", "js/core.js", "js/country.js", "js/capture/airbnb.js"]
      },
      {
        "matches":[
            "*://*.agoda.com/*"
        ],
        "run_at": "document_start",
        "js":["js/consts.js", "js/ui.js", "js/core.js", "js/country.js", "js/capture/agoda.js"]
      },
      {
        "matches":[
            "*://*.travala.com/*"
        ],
        "run_at": "document_start",
        "world": "MAIN",
        "js":["injectXMLExtract.js"]
      },
      {
        "matches":[
            "*://*.travala.com/*"
        ],
        "run_at": "document_start",
        "js":["js/consts.js", "js/ui.js", "js/core.js", "js/country.js", "js/capture/travala.js"]
      },
      {
          "matches":[
              "*://*.wander.garden/*",
              "*://127.0.0.1/*"
          ],
          "js":["js/consts.js", "js/garden.js"]
      }
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "web_accessible_resources": [{
      "resources": ["injectXMLExtract.js"],
      "matches": ["*://*.travala.com/*"]
    },
    {
      "resources": ["injectWindowExtract.js"],
      "matches": ["*://*.agoda.com/*"]
    }]
}